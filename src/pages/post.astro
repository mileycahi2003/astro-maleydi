---
//data fetching
const response = await fetch("https://jsonplaceholder.typicode.com/posts");
const posts = await response.json();

//console.log(data)
import Layout from "../components/layout.astro";
---

<style>
  .title {
    color: rgb(22, 21, 22);
  }
</style>

<Layout>
  <h1 class="title">publicaciones</h1>

  {
    posts.map((post) => (
      <div>
        <h5 class="title">{post.userId}</h5>
        <h3 class="title">p{post.title}</h3>
        <p style="color:rgb(3, 105, 3)">{post.body}</p>
      </div>
    ))
  }     
</Layout>
